<main role="main">
  <section class="featured-panel device-md">
    <div class="card bg-black">
      <img class="card-img opacity-50 full-opacity-on-device" src="<%= AppConfig[:public_proxy_prefix] %>assets/images/bps_01734.jpg" alt="background image">
      <div class="card-img-overlay d-flex">
        <div class="container align-self-center my-3">
          <div class="narrow text-white text-center">
            <h1 class="card-title display-4 font-weight-bold">Welcome to the Municipal Archives</h1>
            <p class="card-text-bold" >The Archives preserves and makes available New York City government's historical records.
              Explore our collections dating from 1645 to the present including documents, digital collections, still and moving images,
              ledgers and docket books, cartographic materials, blueprints, and audiovisual materials.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="pt-5">
    <div class="container">
      <div class="row matrix-gutter">
        <div class="container-fluid">
          <% @search = Search.new unless defined?(@search) %>
          <%= form_tag('/search', method: 'get', :id => 'homepage_search', class: 'narrow py-2', aria: {label: 'Search'}) do %> <!-- form tag begin -->
            <div class="input-group" id="homepage_search_row">
              <div class="col-sm-1 bool form-group form-inline hidden">
                <%= label_tag("op", t('advanced_search.operator_label'), :class => 'sr-only') %>
                <%= select_tag('op[]', options_for_select(Search.get_boolean_opts, @search[:op][0]), disabled: true, :id => "homepage_search_op_select", :class => 'form-control hidden') %>
                <%= hidden_field_tag('op[]', '', :id => 'homepage_search_op_input') %>
              </div>
              <%= label_tag(:"homepage-search-bar", t('navbar.search_placeholder'), :class => 'sr-only repeats') %>
              <%= text_field_tag('q[]', @search[:q][0], :placeholder => t('navbar.search_placeholder'), :value => '', :id => 'homepage-search-bar',
                                 :class => 'form-control form-control-lg') %>
              <div class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg", id: 'submit_homepage_search', name: 'commit', value: 'Search', title: 'Search', data: {disable_with: '<span class="fas fa-arrow-right" role="img"></span>'}) do %>
                  <span class="sr-only">Search</span>
                  <span class="fas fa-arrow-right" role="img"></span>
                <% end %>
              </div>
            </div>
          <% end %> <!-- Form tag end -->
          <p class="text-center">Search our collections by keywords such as people, places, subjects, and material types, or try<a href="<%= app_prefix('/search?reset=true') %>" title="<%= I18n.t('search_tab', :target => t('archive._plural')) %>" class="advanced-search-link">advanced search</a>.</p>
        </div>
      </div>
    </div>
  </section>
  <!-- .featured-panel -->
  <section class="py-5">
    <div class="container">
      <div class="row matrix-gutter">
        <div class="col-md">
          <div class="card h-100 bg-dark opacity-90">
            <div class="card-body text-white">
              <h2 class="card-title text-center">Collections</h2>
              <p class="card-text">
                Our vast and growing holdings are continually processed and made accessible through descriptive finding aids.
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/repositories/resources" class="btn btn-lg btn-white text-primary stretched-link">View All</a>
            </div>
          </div>
        </div>
        <!-- .col -->
        <div class="col-md">
          <div class="card h-100 bg-light">
            <div class="card-body text-dark">
              <h2 class="card-title text-center">Subjects</h2>
              <p class="card-text">
                Browse by topical subjects, material types, occupations, and locations.
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/subjects" class="btn btn-lg btn-primary stretched-link text-white">View All</a>
            </div>
          </div>
        </div>
        <!-- .col -->
      </div>
      <!-- .row -->
      <div class="row matrix-gutter">
        <div class="col-md">
          <div class="card h-100 bg-light">
            <div class="card-body text-dark">
              <h2 class="card-title text-center">Names</h2>
              <p class="card-text">
                Browse by individuals and organizations associated with our collections.
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/agents" class="btn btn-lg btn-primary stretched-link text-white">View All</a>
            </div>
          </div>
        </div>
        <!-- .col -->
        <div class="col-md">
          <div class="card h-100 bg-dark opacity-90">
            <div class="card-body text-white">
              <h2 class="card-title text-center">Record Groups</h2>
              <p class="card-text">
                Our collections and accessions are organized by Record Group, typically the creating city agency.
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/classifications" class="btn btn-lg btn-white text-primary  stretched-link">View All</a>
            </div>
          </div>
        </div>
        <!-- .col -->
      </div>
      <!-- .row -->
    </div>
    <!-- .container -->
  </section>
  </div>
  <!-- .row -->
  </div>
  <!-- .container -->
  </section>
  <%= render partial: 'shared/appointment_banner' %>
</main>